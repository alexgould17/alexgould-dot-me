<h1>Post New Blog</h1>
<%= form_for @blog do |f| %>
  <%= f.label :title, "Blog Title" %>
  <%= f.text_field :title %>

  <%= f.label :author, "Blog Author" %>
  <%= f.text_field :author %>

  <%= f.label :hook, "Hook paragraph (just copy & paste 1st paragraph if not sure)" %>
  <%= f.text_area :hook %>

  <%= f.label :body, "Blog Body (in full HTML)" %>
  <%= f.text_area :body %>

  <%= f.submit "Create & Publish" %>
<% end %>
